{
  "name": "basecamp-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "npm@10.8.1",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:registry": "turbo run build --filter=@basecamp/registry",
    "build:docs": "turbo run build --filter=@basecamp/docs",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo run clean && rm -rf node_modules",
    "release:registry": "turbo run build --filter=@basecamp/registry && npm publish --workspace=@basecamp/registry",
    "release:jsrepo": "jsrepo publish"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-beta.1",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.4.1",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/mdx": "^2.0.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "jotai": "^2.12.5",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "next-mdx-remote-client": "^2.1.2",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-aria-components": "^1.10.1",
    "react-dom": "^19.0.0",
    "rehype-pretty-code": "^0.14.1",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.8.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-react-aria-components": "^2.0.0",
    "tw-animate-css": "^1.3.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "jsrepo": "^2.4.3",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "turbo": "^2.5.4",
    "typescript": "^5"
  }
}
