{
  "name": "@basecamp/docs",
  "version": "0.1.0",
  "private": true,
  "description": "Basecamp UI Documentation Site",
  "scripts": {
    "dev": "npm run build:content && next dev",
    "dev:turbo": "npm run build:content && next dev --turbopack",
    "build": "npm run build:registry && npm run build:content && next build",
    "build:registry": "cd ../registry && npm run build:index",
    "build:content": "npm run build:tools && node build/dist/build-content.js",
    "build:tools": "cd build && tsup",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next dist build/dist"
  },
  "dependencies": {
    "@basecamp/registry": "file:../registry",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.4.1",
    "@types/mdx": "^2.0.13",
    "gray-matter": "^4.0.3",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "rehype-pretty-code": "^0.14.1",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.8.0",
    "jotai": "^2.12.5",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "next-mdx-remote-client": "^2.1.2",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss-react-aria-components": "^2.0.0",
    "tw-animate-css": "^1.3.5"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
