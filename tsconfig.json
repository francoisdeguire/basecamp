{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@basecamp/registry": ["packages/registry/src"],
      "@basecamp/registry/*": ["packages/registry/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "packages/*/node_modules", "packages/*/dist"]
}
